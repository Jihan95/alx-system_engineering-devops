#!/usr/bin/env bash
# a bash script to intall nginx on the server
sudo apt -y update
sudo apt -y install nginx
sudo apt -y nginx start
echo "<h1>Hello World!</h1>" >> /var/www/html/index.html
re="service_name _;"
new="service_name ji-han.tech;\n\t location /redirect_me {\n\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n}\n"
sudo sed -i "s/$re/$new/" /etc/nginx/sites-enabled/default
sudo service nginx restart
sudo service nginx reload
